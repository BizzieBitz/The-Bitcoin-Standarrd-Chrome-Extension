{
  "manifest_version": 3,
  "name": "The Bitcoin Standard",
  "description": "Converts prices in your browser from US dollars to Bitcoin",
  "version": "1.0",
  "permissions": [
   "storage"
  ],
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
},
  "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["btc.js"],
      "run_at": "document_end"
  }]
}
